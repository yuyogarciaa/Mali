<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/identificador"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nametask"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/text_bg"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="18dp" />

        <TextView
            android:id="@+id/task"
            android:layout_width="220dp"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:text="Nombre"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_st"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:gravity="center_vertical"
            android:text="Start_task"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/st"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/tv_st"
            android:gravity="center"
            android:text="Start task:"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_et"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_st"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center_vertical"
            android:text="End_task"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/et"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_below="@+id/st"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/tv_et"
            android:gravity="center"
            android:text="End Task:"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_et"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="Responsable"
            android:textSize="12dp" />


    </RelativeLayout>




</LinearLayout>